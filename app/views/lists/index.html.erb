<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://media.gqmagazine.fr/photos/6399e729aa342b4423bab367/16:9/w_2560%2Cc_limit/GettyImages-636899879.jpg')">
  My Super Lists
</div>


<%= link_to "New List", new_list_path, class: "btn btn-success" %>

<% @lists.each do |list| %>
  <div class="movie-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 100, crop: :fill %>')">
  <%= link_to list.name, list_path(list) %>
  </div>
<% end %>
